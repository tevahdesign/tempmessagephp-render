RewriteEngine On

# -----------------------------------------------------------
# üîÅ FORCE WWW VERSION (very important for SEO canonicalization)
# -----------------------------------------------------------
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.tempmessage.com/$1 [L,R=301]

# -----------------------------------------------------------
# üìÑ Serve robots.txt directly
# -----------------------------------------------------------
RewriteRule ^robots\.txt$ robots.txt [L]

# -----------------------------------------------------------
# üó∫ Serve sitemap files directly (NO leading slash)
# -----------------------------------------------------------
RewriteRule ^sitemap\.php$ sitemap.php [L]
RewriteRule ^sitemap\.xml$ sitemap.xml [L]
RewriteRule ^sitemap_index\.xml$ sitemap_index.xml [L]

# -----------------------------------------------------------
# üß± Stop rewriting if real file exists
# -----------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# -----------------------------------------------------------
# üóÇ Stop rewriting if real directory exists
# -----------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# -----------------------------------------------------------
# ‚ñ∂ Everything else ‚Üí index.php
# -----------------------------------------------------------
RewriteRule ^ index.php [L]
