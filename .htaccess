RewriteEngine On

# ---------------------------------------------------------
# Force HTTPS (no loop)
# ---------------------------------------------------------
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://tempmessage.com/$1 [L,R=301]

# ---------------------------------------------------------
# Remove WWW (no loop)
# ---------------------------------------------------------
RewriteCond %{HTTP_HOST} ^www\.tempmessage\.com$ [NC]
RewriteRule ^(.*)$ https://tempmessage.com/$1 [L,R=301]

